daemon off;
events {
    worker_connections 4000;
}
error_log {{error_log}};
http {
    include {{mimePath}};
    default_type application/octet-stream;
    log_format main '$remote_addr - $remote_user [$time_local] $status '
                  '"$request" $body_bytes_sent "$http_referer" '
                  '"$http_user_agent" "http_x_forwarded_for"';
    sendfile on;
    tcp_nopush on;
    tcp_nodelay off;
    gzip on;
    gzip_http_version 1.0;
    gzip_comp_level 2;
    gzip_proxied any;
    access_log {{access_log}};
    error_log {{error_log}};
    {{#upstream}}
    upstream {{name}} {
      {{method}};
      {{#routes}}
      server {{host}}:{{port}};
      {{/routes}}
    }
    {{/upstream}}
    server {
      listen 7005 default_server;
      location =/health {
        return 200;
        access_log off;
      }
      location / {
        return 500;
      }
    }
    {{#server}}
    server {
      listen 7005;
      server_name {{domain}};
      location / {
        proxy_pass http://{{name}};
      }
    }
    {{/server}}
}
worker_processes {{worker_processes}};
pid {{pidfile}};
